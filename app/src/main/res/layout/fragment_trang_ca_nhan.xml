<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_menu_tool_bar.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_border_top"
                android:orientation="vertical"
                android:padding="@dimen/margin_all_component"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/marginbottom_all_component"

                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/img_back"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@drawable/back_icon"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Back"
                        android:textColor="@color/dim_gray"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_horizontal"
                        android:text="Trang Cá Nhân"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_navbot_canhan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_tienich_canhan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/marginbottom_all_component"
                        android:text="Tiện ích"
                        android:textColor="@color/all_title"
                        android:textSize="@dimen/textsize_all_bigtitle"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/ln_lich_su_don_hang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/marginbottom_all_component"
                        android:background="@drawable/btn_trang_ca_nhan"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_all_component">

                        <ImageView
                            android:id="@+id/img_ic_lsdh_canhan"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/trangcanhan_iconlsdonhang" />

                        <TextView
                            android:id="@+id/chip_lsdh_canhan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"
                            android:text="Lịch sử đơn hàng"
                            android:textAllCaps="false"
                            android:textColor="@color/black" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/txt_taikhoan_canhan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/marginbottom_all_component"

                        android:text="Tài khoản"
                        android:textColor="@color/all_title"
                        android:textSize="@dimen/textsize_all_bigtitle"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/ln_thongtincanhan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/marginbottom_all_component"
                        android:background="@drawable/btn_trang_ca_nhan"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_all_component">

                        <ImageView
                            android:id="@+id/img_ic_thongtin_canhan"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/trangcanhan_iconthongtincanhan" />

                        <TextView
                            android:id="@+id/chip_thongtin_canhan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"
                            android:text="Thông tin cá nhân"
                            android:textColor="@color/black"

                            />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ln_thaydoimatkhau"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/marginbottom_all_component"
                        android:background="@drawable/btn_trang_ca_nhan"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_all_component">

                        <ImageView
                            android:id="@+id/img_ic_thaydoi_canhan"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/trangcanhan_iconthaydoimatkhau" />

                        <TextView
                            android:id="@+id/chip_thaydoi_canhan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"
                            android:text="Thay đổi mật khẩu"

                            android:textColor="@color/black"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_dangxuat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/marginbottom_all_component"
                        android:background="@drawable/btn_trang_ca_nhan"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_all_component">
                        <ImageView
                            android:id="@+id/img_ic_logout_canhan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/trangcanhan_icondangxuat" />

                        <TextView
                            android:id="@+id/chip_logout_canhan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"

                            android:textColor="@color/black"
                            android:text="Đăng xuất" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/txt_hotro_canhan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/marginbottom_all_component"
                        android:text="Hỗ trợ"

                        android:textColor="@color/all_title"
                        android:textSize="@dimen/textsize_all_bigtitle"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:id="@+id/ln_lienhe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/marginbottom_all_component"
                        android:background="@drawable/btn_trang_ca_nhan"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_all_component">
                        <ImageView
                            android:id="@+id/img_ic_lienhe_canhan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/trangcanhan_iconlienhe" />

                        <TextView
                            android:id="@+id/chip_lienhe_canhan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"

                            android:textColor="@color/black"
                            android:text="Liên hệ" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</RelativeLayout>