<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_black"
    android:orientation="vertical">

    <TextView
        android:textSize="40dp"
        android:textColor="@color/deep_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/ln_page_3_dash_board_title" />


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_select"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"></androidx.appcompat.widget.Toolbar>
    <include layout ="@layout/tab_select_container"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_page_3_dash_board"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>