<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_menu_tool_bar.MainActivity">

    <com.example.langthangcoffee.VerticalViewPager
        android:id="@+id/vp_dash_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/layout_login_bg"
        android:layout_width="match_parent"
        android:layout_height="700dp">

        <TextView
            android:textSize="25sp"
            android:gravity="center_horizontal"
            android:textColor="@color/dim_gray"
            android:text="@string/rl_ln_fragment_dash_board_title"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center_horizontal"
            android:textColor="@color/deep_black"
            android:textSize="40sp"
            android:layout_marginTop="20dp"
            android:text="@string/all_app_name_uppercase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/ln_phone_number"
            android:background="@drawable/layout_phone_number_bg_uncheck"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img_vietnam_flag"
                tools:ignore="ContentDescription" />
            <TextView
                android:id='@+id/tv_plus_84'
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/light_silver_gray"
                android:text="@string/tv_plus_84"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:id='@+id/tv_vertical_line'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="20dp"
                android:text="@string/tv_vertical_line"
                android:textColor="@color/light_silver_gray"
                android:textSize="40sp" />

            <EditText
                android:id='@+id/et_phone_number'
                android:backgroundTint="@color/light_silver_gray"
                android:textColorHint="@color/light_silver_gray"
                android:hint="@string/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:gravity="left"
                android:minHeight="48dp"
                android:maxLength="12"
                android:maxLines="1"
                android:inputType="phone" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_sign_in"
            android:background="@drawable/custom_btn_light_gray_radius_30dp"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_sign_in"/>
        
        <TextView
            android:text="@string/tv_or"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/slate_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="center"
            android:background="@drawable/layout_phone_number_bg_uncheck"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/img_icon_google"
                tools:ignore="ContentDescription" />

            <TextView
                android:text="@string/tv_sign_in_with_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/dim_gray"/>
        </LinearLayout>

    <TextView
        android:textSize="20sp"
        android:textColor="@color/dim_gray"
        android:text="@string/tv_new_register"
        android:gravity="center"
        android:background="@drawable/layout_phone_number_bg_uncheck"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    </LinearLayout>

</RelativeLayout>