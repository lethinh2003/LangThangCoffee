<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_menu_tool_bar.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_navigation_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/back_icon"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:fontFamily="@font/roboto_bold"
            android:text="Chi Tiết Đặt Hàng"
            android:textColor="@color/deep_black"
            android:textSize="16dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ln_navigation_bottom"
        android:layout_below="@id/rl_navigation_top"

        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/inter_bold"
                android:text="Tài khoản"
                android:textColor="@color/deep_black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_taikhoan_don_hang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/inter_medium"
                android:text="0369084341"
                android:textColor="@color/deep_black"
                android:textSize="15dp"

                tools:ignore="HardcodedText" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/inter_bold"
                android:text="Mã đơn hàng"
                android:textColor="@color/deep_black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_ma_don_hang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/inter_medium"
                android:text="001"
                android:textColor="@color/deep_black"
                android:textSize="15dp"

                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/inter_bold"
                android:text="Phương thức giao hàng"
                android:textColor="@color/deep_black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/inter_medium"
                android:text="Tận nơi"
                android:textColor="@color/deep_black"
                android:textSize="15dp"

                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/inter_bold"
                android:text="Thông tin giao hàng"
                android:textColor="@color/deep_black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_info_ship_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/inter_medium"
                android:text="Anh Thinh Le, 0369084341, Số 123, Đường Trường Trinh, Quận Tân Bình, TP HCM"
                android:textColor="@color/deep_black"
                android:textSize="15dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/inter_bold"
                android:text="Sản phẩm đã chọn"
                android:textColor="@color/deep_black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_order_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/inter_bold"
                android:text="Tổng cộng"
                android:textColor="@color/deep_black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/layout_border_top_bottom"
                android:orientation="horizontal"
                android:paddingBottom="10dp"

                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:text="Thành tiền"
                    android:textColor="@color/deep_black"
                    android:textSize="15dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_item_thanhtien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="right"
                    android:text="80.000 đ"
                    android:textColor="@color/deep_black"
                    android:textSize="15dp"

                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/layout_border_top_bottom"
                android:orientation="horizontal"
                android:paddingBottom="10dp"

                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:text="Phí giao hàng"
                    android:textColor="@color/deep_black"
                    android:textSize="15dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_item_phigiaohang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="right"
                    android:text="10.000 đ"
                    android:textColor="@color/deep_black"
                    android:textSize="15dp"

                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_magiamgia_xacnhan_dathang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/layout_border_top_bottom"
                android:orientation="horizontal"
                android:paddingBottom="10dp"

                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:text="Mã giảm giá"
                    android:textColor="#1540EC"
                    android:textSize="15dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_voucher_donhang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="right"
                    android:text="Không có"
                    android:textColor="#1540EC"
                    android:textSize="15dp"

                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:text="Số tiền thanh toán"
                    android:textColor="@color/deep_black"
                    android:textSize="15dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_item_thanhtoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="right"
                    android:text="90.000 đ"
                    android:textColor="@color/deep_black"
                    android:textSize="15dp"

                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/inter_bold"
                android:text="Phương thức thanh toán"
                android:textColor="@color/deep_black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/inter_medium"
                android:text="Tiền mặt"
                android:textColor="@color/deep_black"
                android:textSize="15dp"

                tools:ignore="HardcodedText" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>