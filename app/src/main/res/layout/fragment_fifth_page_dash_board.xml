<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_page_5_dash_board"
        android:gravity="center"
        android:textSize="50sp"
        android:textColor="@color/deep_orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="@string/rl_page_5_dash_board_title" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_page_5_dash_board"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_title_page_5_dash_board"
        android:layout_centerInParent="true"/>

</RelativeLayout>