<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_menu_tool_bar.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_navigation_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/back_icon"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/all_tv_title_chitietdathang"
            android:textColor="@color/deep_black"
            android:textSize="16dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/rl_navigation_top"

        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_all_component"
            android:paddingBottom="20dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                
                android:layout_marginTop="20dp"
                
                android:fontFamily="@font/inter_bold"
                android:text="@string/all_tv_title_madonhang"
                android:textColor="@color/deep_black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_ma_don_hang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:layout_marginTop="10dp"
                
                android:fontFamily="@font/inter_medium"

                android:textColor="@color/deep_black"
                android:textSize="15dp"

                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                
                android:layout_marginTop="20dp"
                
                android:fontFamily="@font/inter_bold"
                android:text="@string/all_tv_title_phuongthucgiaohang"
                android:textColor="@color/deep_black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:layout_marginTop="10dp"
                
                android:fontFamily="@font/inter_medium"
                android:text="@string/all_tv_title_phuongthucgiaohang_tannoi"
                android:textColor="@color/deep_black"
                android:textSize="15dp"

                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                
                android:layout_marginTop="20dp"
                
                android:fontFamily="@font/inter_bold"
                android:text="@string/all_tv_title_thongtingiaohang"
                android:textColor="@color/deep_black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_info_ship_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:layout_marginTop="10dp"
                
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/deep_black"
                android:textSize="15dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                
                android:layout_marginTop="20dp"
                
                android:fontFamily="@font/inter_bold"
                android:text="@string/all_tv_title_sanphamdachon"
                android:textColor="@color/deep_black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/marginbottom_all_component"
                tools:ignore="HardcodedText" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"


                android:layout_marginBottom="@dimen/marginbottom_all_component">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_order_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"


                />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                
                android:layout_marginTop="20dp"
                
                android:fontFamily="@font/inter_bold"
                android:text="@string/all_tv_title_tongcong"
                android:textColor="@color/deep_black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:layout_marginTop="10dp"
                
                android:background="@drawable/layout_border_top_bottom"
                android:orientation="horizontal"
                android:paddingBottom="10dp"

                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:text="@string/all_tv_title_thanhtien"
                    android:textColor="@color/deep_black"
                    android:textSize="15dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_item_thanhtien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="right"

                    android:textColor="@color/deep_black"
                    android:textSize="15dp"

                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:layout_marginTop="10dp"
                
                android:background="@drawable/layout_border_top_bottom"
                android:orientation="horizontal"
                android:paddingBottom="10dp"

                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:text="@string/all_tv_title_phigiaohang"
                    android:textColor="@color/deep_black"
                    android:textSize="15dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_item_phigiaohang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="right"

                    android:textColor="@color/deep_black"
                    android:textSize="15dp"

                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_magiamgia_xacnhan_dathang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:layout_marginTop="10dp"
                
                android:background="@drawable/layout_border_top_bottom"
                android:orientation="horizontal"
                android:paddingBottom="10dp"

                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:text="@string/all_tv_hint_magiamgia"
                    android:textColor="#1540EC"
                    android:textSize="15dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_voucher_donhang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="right"
                    android:text="@string/all_tv_title_magiamgia_khongco"
                    android:textColor="#1540EC"
                    android:textSize="15dp"

                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:layout_marginTop="10dp"
                
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:text="@string/all_tv_title_sotienthanhtoan"
                    android:textColor="@color/deep_black"
                    android:textSize="15dp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_item_thanhtoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="right"

                    android:textColor="@color/deep_black"
                    android:textSize="15dp"

                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                
                android:layout_marginTop="20dp"
                
                android:fontFamily="@font/inter_bold"
                android:text="@string/all_tv_title_phuongthucthanhtoan"
                android:textColor="@color/deep_black"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:layout_marginTop="10dp"
                
                android:fontFamily="@font/inter_medium"
                android:text="@string/all_tv_title_phuongthucthanhtoan_tienmat"
                android:textColor="@color/deep_black"
                android:textSize="15dp"

                tools:ignore="HardcodedText" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>