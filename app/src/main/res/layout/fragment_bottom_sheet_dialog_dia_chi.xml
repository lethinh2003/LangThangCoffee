<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_navigation_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/img_close_bottom_dialog"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_close"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_bold"
            android:text="Địa Chỉ Giao Hàng"
            android:textColor="@color/deep_black"
            android:textSize="16dp" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/rl_navigation_top"
        android:layout_marginTop="20dp"

        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/layout_phone_number_bg_uncheck">

                <EditText
                    android:id="@+id/edt_nguoinhan_info_ship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:background="@android:color/transparent"
                    android:gravity="left"
                    android:hint="Người nhận"
                    android:inputType="textNoSuggestions"
                    android:textColorHint="@color/light_silver_gray"
                    android:textSize="16dp"
                    tools:ignore="Autofill,RtlHardcoded,TouchTargetSizeCheck,VisualLintTextFieldSize,TextContrastCheck" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/layout_phone_number_bg_uncheck">

                <EditText
                    android:id="@+id/edt_sdt_info_ship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:background="@android:color/transparent"
                    android:gravity="left"
                    android:hint="Số điện thoại"
                    android:inputType="textNoSuggestions"
                    android:textColorHint="@color/light_silver_gray"
                    android:textSize="16dp"
                    tools:ignore="Autofill,RtlHardcoded,TouchTargetSizeCheck,VisualLintTextFieldSize,TextContrastCheck" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/layout_phone_number_bg_uncheck">

                <EditText
                    android:id="@+id/edt_diachi_info_ship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:background="@android:color/transparent"
                    android:gravity="left"
                    android:hint="Địa chỉ"
                    android:inputType="textNoSuggestions"
                    android:textColorHint="@color/light_silver_gray"
                    android:textSize="16dp"
                    tools:ignore="Autofill,RtlHardcoded,TouchTargetSizeCheck,VisualLintTextFieldSize,TextContrastCheck" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"

                tools:ignore="ExtraText">

                <CheckBox
                    android:id="@+id/chk_default_address"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/custom_chkb_deep_orange_bg"
                    android:button="@android:color/transparent"

                    tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/chk_default_address"
                    android:fontFamily="@font/inter_medium"
                    android:text="Đặt làm địa chỉ mặc định"
                    android:textColor="@color/deep_black"
                    android:textSize="15dp"
                    tools:ignore="HardcodedText,RelativeOverlap,RtlHardcoded" />


            </RelativeLayout>

            <Button
                android:id="@+id/btn_change_info_ship_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

android:layout_marginBottom="10dp"
                android:background="@drawable/custom_btn_pale_cream_radius_10dp"
                android:fontFamily="@font/inter_bold"
                android:text="Áp dụng"
                android:textAllCaps="false"
                android:textColor="#F68422"
                android:textStyle="bold" />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>